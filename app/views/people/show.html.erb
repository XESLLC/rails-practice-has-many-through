<div class="page-header">
  <h1>Showing Person <%= @person.name %></h1>
</div>

<h2>Organizations</h2>

<table>
  <thead>
    <tr>
      <th>
        Name(s)
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <div class="well">
          <% @person.organizations.each do |organization| %>
            <ul>
              <li> <%= organization.name %> </li>
            </ul>
          <% end %>
        </div>
      </td>
    </tr>
  </tbody>
</table>
